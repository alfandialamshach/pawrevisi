<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
  :root {
    --primary: #2c786c;
    --dark-overlay: rgba(0, 0, 0, 0.5);
  }
  
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
  }
  
  .container-fluid .navbar {
    background-color: #ffffff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .container-fluid .navbar-logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: #000000;
    font-style: italic;
  }
  
  .container-fluid .navbar-logo span {
    color: var(--primary);
  }
  
  .container-fluid .navbar-nav .nav-link {
    font-size: 1rem;
    font-weight: 600;
    margin-right: 15px;
    color: #000000;
    text-transform: capitalize;
  }
  
  .container-fluid .navbar-nav .nav-link.active {
    color: var(--primary);
  }
  
  .container-fluid .navbar-nav .nav-link:hover {
    color: var(--primary);
  }
  
  .container-fluid .nav-link i {
    margin-right: 5px;
  }
  
  .navbar .nav {
    margin-left: auto;
  }
</style>
<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a href="#" class="navbar-logo">CahayaSayur<span>AR</span></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav" style="justify-content:center">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/index">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/tentang-view">Tentang Kami</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/produk-view">Produk</a>
          </li>
        </ul>
      </div>
      <li class="nav" >
        <a class="nav-link" href="/login" style="color:black">
            <i class="fas fa-sign-out-alt"></i> Sign Out
        </a>
    </li>
    
    </div>
  </nav>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      // Mendapatkan URL halaman saat ini
      var currentUrl = window.location.pathname;
  
      // Menambahkan kelas active pada link yang sesuai
      var links = document.querySelectorAll(".navbar-nav .nav-link");
      links.forEach(function(link) {
        if (link.getAttribute("href") === currentUrl) {
          link.classList.add("active");
        } else {
          link.classList.remove("active");
        }
      });
    });
  </script>
  